  <div class="container text-center col-5">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-signin" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

<%= image_tag asset_path('favicon.ico'), class: "mb-4", alt: "", width: 72, height: 72 %>
      <h1 class="h3 mb-3 font-weight-normal">Sign up</h1>

      <div class="field">
        <%= f.label :email, class: "sr-only" %>
        <%= f.email_field :email, class: "form-control", placeholder: "Email address", required: true, autofocus: true %>
      </div>

      <div class="field">
        <%= f.label :password, class: "sr-only" %>
        <%= f.password_field :password, class: "form-control", placeholder: "Password", required: true %>
        <% if @minimum_password_length %>
          <small class="text-muted">(<%= @minimum_password_length %> characters minimum)</small>
        <% end %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, class: "sr-only" %>
        <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirm Password", required: true %>
      </div>

      <div class="checkbox mb-3">
        <label>
         
        </label>
      </div>
      <div class="row">
      <div class="col">
      <%= f.check_box :remember_me %> Remember me
      <%= f.submit "Sign up", class: "btn btn-lg btn-danger col-12" %>
      
      </div>
      </div>
    <% end %>
  </div>